<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" version="3.7.0" group="fields" method="upgrade">
	<name>plg_fields_travel</name>
	<author>Elisa Foltyn</author>
	<creationDate>2017</creationDate>
	<copyright>www.coolcat-creations.com</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>contact@coolcat-creations.com</authorEmail>
	<authorUrl>www.coolcat-creations.com</authorUrl>
	<version>1.0.0-alpha</version>
	<description>PLG_FIELDS_TRAVEL_DESC</description>

	<files>
		<filename plugin="travel">travel.php</filename>
		<folder>fields</folder>
		<folder>language</folder>
		<folder>params</folder>
		<folder>tmpl</folder>
		<folder>layouts</folder>
	</files>
	<media destination="plg_fields_travel" folder="media">
		<folder>css</folder>
		<folder>js</folder>
	</media>

	<language folder="language">
		<language tag="en-GB">en-GB.plg_fields_travel.ini</language>
		<language tag="en-GB">en-GB.plg_fields_travel.sys.ini</language>
	</language>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="flickrapi"
				       type="text"
				       default=""
				       label="Flickr API KEY"
				       filter="raw"
				/>
				<field name="apixuapi"
				       type="text"
				       default=""
				       label="Apixu API KEY"
				       filter="raw"
				/>
			</fieldset>
		</fields>
	</config>

</extension>
